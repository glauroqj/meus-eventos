{
  "manifest_version": 2,

  "name": "Meus Eventos",
  "description": "Acompanhe seus eventos em tempo real",
  "version": "0.0.1",
  "author": "Glauro Q. Juliani",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Meus Eventos"
  },
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "alarms",
    "notifications",
    "background",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ]
}